<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="GreenTextInputLayout" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:paddingStart">2dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>

        <item name="android:paddingEnd">2dp</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
    </style>
    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
    <style name="CheckBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimaryDark</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item> <!-- for check state -->
    </style>
    <style name="NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyCustomTabText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/seguisb</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">#0091ea</item>
        <item name="android:colorControlHighlight">#c51162</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="CustomDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
