<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            >
            <FrameLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spn_background">
                <Spinner
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/spCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="@color/colorWhite"
                    android:dropDownWidth="130dp"
                    android:popupBackground="@color/colorWhite"
                    android:spinnerMode="dropdown"
                    />
            </FrameLayout>
            <FrameLayout

                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/custom_spn_background">

                <Spinner
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/spCountry1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="@color/colorWhite"
                    android:dropDownWidth="130dp"
                    android:popupBackground="@color/colorWhite"
                    android:spinnerMode="dropdown"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spn_background">
                <Spinner
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/spCountry2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dropDownSelector="@color/colorWhite"
                    android:dropDownWidth="130dp"
                    android:popupBackground="@color/colorWhite"
                    android:spinnerMode="dropdown"
                    />
            </FrameLayout>
        </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
         <androidx.cardview.widget.CardView
             android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/special_receipe" />

    </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/segoe_ui_bold"
            android:textColor="@color/colorWhite"
            android:text="@string/special_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/recycler_1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>