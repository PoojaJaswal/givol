<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/active_cover_image"
            android:contentDescription="@string/app_name"
             />

        <LinearLayout
             android:orientation="vertical"
             android:id="@+id/l1"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/_60sdp"
             android:layout_marginLeft="@dimen/_10sdp"
             android:layout_toRightOf="@+id/active_cover_image">
        <TextView
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/segoe_ui_bold"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/active_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVE CONTEST" />
        <TextView
            android:textSize="@dimen/_12sdp"
           android:fontFamily="@font/segoe_ui_regular"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/active_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="ACTIVE C" />
    </LinearLayout>
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/_60sdp"
             android:layout_marginRight="@dimen/_20sdp"
             android:layout_alignParentRight="true">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <TextView
                     android:textSize="@dimen/_10sdp"
                     android:fontFamily="@font/segoe_ui_bold"
                     android:textColor="@color/colorGreen"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="$" />
                 <TextView
                     android:textSize="@dimen/_10sdp"
                     android:fontFamily="@font/segoe_ui_bold"
                     android:textColor="@color/colorGreen"
                     android:id="@+id/active_amount"
                     android:layout_width="@dimen/_30ssp"
                     android:layout_height="wrap_content"
                     android:text="55" />
             </LinearLayout>

        <TextView
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/seguisb"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/active_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="2:15:34" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>