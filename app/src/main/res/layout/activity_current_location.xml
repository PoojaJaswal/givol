<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".CurrentLocationActivity">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_layout_1"
        android:background="@drawable/rounded_corner_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp">
        <Button
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/seguisb"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="end"
            android:id="@+id/nextTxt"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Next" />
        <TextView
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/segoe_ui_bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let us find you" />
        <LinearLayout
            android:background="@drawable/dotted"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
         <LinearLayout
             android:layout_gravity="center_horizontal"
             android:orientation="horizontal"
             android:background="@drawable/back_round_corner"
             android:layout_width="@dimen/_270sdp"
             android:layout_height="wrap_content"
             android:layout_marginTop="70dp">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="10dp"

            android:src="@drawable/ic_location_icon" />
        <EditText android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@null"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:fontFamily="@font/seguisb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search your location here"
            android:textAlignment="textStart" />
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
     <LinearLayout
         android:layout_gravity="center_horizontal"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/linear_layout_1">
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
    <Button
        android:textSize="13dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/btnUSA"
        android:background="@drawable/back_round_corner"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="USA" />
    <ListView android:layout_gravity="center_horizontal"
        android:id="@+id/list_view1"
        android:background="@drawable/list_background_border"
        android:visibility="gone" android:layout_width="110dp"
        android:layout_height="wrap_content" />
</LinearLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
    <Button
        android:textSize="13dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/btnUK"
        android:background="@drawable/double_btn_back"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="The UK"
        android:shadowColor="@android:color/transparent" />
    <ListView android:layout_gravity="center_horizontal"
        android:id="@+id/list_view"
        android:background="@drawable/list_background_border"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp" />
</LinearLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
    <Button
        android:textSize="13dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/btnCanada"
        android:background="@drawable/back_round_corner"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Canada"
        android:shadowColor="@android:color/transparent" />
    <ListView android:layout_gravity="center_horizontal"
        android:id="@+id/list_view2"
        android:background="@drawable/list_background_border"
        android:visibility="gone"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp" />
</LinearLayout>
</LinearLayout>
</LinearLayout>