<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/activity_main"
    android:background="@drawable/linear_bottom_corner"
    tools:context=".PriPolicyActivity">
    <RelativeLayout
        android:id="@+id/relative_lay_1"
        android:orientation="horizontal"
        android:background="@drawable/bottom_corner_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:weightSum="3">
        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/back_img"
            android:background="@drawable/ic_back_purple"
            android:padding="@dimen/_15sdp"
            android:clickable="true"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_logo_pur" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search_white_back"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <ExpandableListView
        android:layout_below="@+id/relative_lay_1"
        android:id="@+id/simple_expandable_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorBlack"
        android:dividerHeight="2dp"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/segoe_ui_bold"
        android:layout_width="wrap_content"
        android:text="Privacy Policy"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content"/>
</RelativeLayout>